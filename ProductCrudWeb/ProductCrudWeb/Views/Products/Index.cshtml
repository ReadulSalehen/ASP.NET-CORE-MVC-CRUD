@model IEnumerable<ProductCrudWeb.Models.Product>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<a class="btn btn-primary" asp-controller="Products" asp-action="Create">Add Product</a>
<table class="table">
    <thead>
        <tr>
            <th>SL#</th>
            <th>Category</th>
            <th>ItemName</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @if(Model != null)
        {
            foreach(Product product in Model)
            {
                <tr>
                    <td>@product.Id</td>
                    <td>@product.Category</td>
                    <td>@product.ItemName</td>
                    <td>
                        <a asp-action="Edit" asp-controller="Products" asp-route-id="@product.Id" class="btn btn-primary">Edit</a>
                        <a asp-action="Delete" asp-controller="Products" asp-route-id="@product.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        }
        
    </tbody>
</table>
